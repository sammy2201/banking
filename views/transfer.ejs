<h2>Transfer</h2>

<form action="/transfer" method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">From</label>
      <input type="text" name="name1" class="form-control"  placeholder="Name Of User" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputEmail4">To</label>
      <input type="text" name="name2" class="form-control"  placeholder="Name Of User" required>
    </div>
    <div class="form-group">
